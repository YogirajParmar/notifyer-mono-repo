{
  "name": "mono-repo",
  "version": "1.1.3",
  "private": true,
  "main": "dist/frontend/electron.js",
  "author": {
    "name": "Yogirajsinh Parmar",
    "email": "yogirajparmar44@gmail.com"
  },
  "scripts": {
    "build": "tsc && tsc-alias && yarn build:fe && yarn build:be && yarn copy-fe-assets",
    "dev": "concurrently \"yarn dev:fe\" \"yarn dev:be\"",
    "dev:fe": "yarn build:fe && electron dist/frontend/electron.js",
    "dev:be": "ts-node-dev --respawn -r tsconfig-paths/register --transpile-only src/backend/index.ts",
    "build:fe": "tsc && cd src/frontend && tsc && cd ../.. && yarn copy-fe-assets",
    "build:be": "tsc && tsc-alias",
    "start": "electron dist/frontend/electron.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "pretty:check": "prettier --check \"./**/*.{js,jsx,ts,tsx,json,md}\"",
    "pretty:write": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,md}\"",
    "copy-fe-assets": "copyfiles -u 2 src/frontend/pages/* src/frontend/assets/**/* dist/frontend",
    "dist:win": "electron-builder build --win --x64",
    "version": "git add package.json"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.0",
    "electron-updater": "^6.3.4",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "libphonenumber-js": "^1.10.47",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.37.3",
    "sqlite3": "5.1.6",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/electron": "^1.6.10",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/method-override": "^0.0.32",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "concurrently": "^8.0.1",
    "copyfiles": "^2.4.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.18.4",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "sync-dotenv": "^2.7.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.0.4"
  },
  "build": {
    "appId": "com.yogiraj.notifyer",
    "productName": "notifyer",
    "icon": "dist/frontend/assets/icons/android-chrome-512x512.png",
    "publish": [
      {
        "provider": "github",
        "owner": "YogirajParmar",
        "repo": "notifyer-mono-repo"
      }
    ],
    "files": [
      "dist/**/*",
      "!dist/**/*.map",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "dist/frontend/assets/icons/favicon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "dist/frontend/assets/icons/android-chrome-512x512.png"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ],
    "afterPack": "./after-pack.js",
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "removePackageScripts": true,
    "buildDependenciesFromSource": true
  }
}
